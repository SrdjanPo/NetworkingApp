<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:elevation="4dp" app:layout_constraintTop_toTopOf="parent">

        <Button
                android:id="@+id/profileChanges"
                android:layout_width="70sp"
                android:layout_height="50sp"
                android:text="save"
                style="@style/SaveButtonTransparent"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            app:cardUseCompatPadding="true" android:id="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:layout_marginTop="20dp">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp">

            <LinearLayout
                    android:id="@+id/briefcaseContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:background="#e3e3e3"
                    android:gravity="center_horizontal">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/briefcase"
                        android:id="@+id/briefcase"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:maxWidth="30dp"
                        android:maxHeight="30dp"
                />

            </LinearLayout>


            <org.apmem.tools.layouts.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/briefcaseContainer"
                    android:gravity="center_horizontal"
                    android:padding="10dp">


                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Hire employees"
                          style="@style/goals"
                          android:gravity="center_horizontal"
                          android:layout_marginRight="50dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Looking for a job"
                          style="@style/goals"
                          android:gravity="center_horizontal"/>

            </org.apmem.tools.layouts.FlowLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>