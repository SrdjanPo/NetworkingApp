<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <TextView
                    android:id="@+id/rowCompany"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Company"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp" android:textStyle="bold"/>

            <TextView
                    android:id="@+id/rowTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SoftwareDeveloper"
                    app:layout_constraintTop_toBottomOf="@+id/rowCompany"
                    android:layout_marginTop="4dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"/>

            <TextView
                    android:id="@+id/rowStartingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apr 2019"
                    app:layout_constraintTop_toBottomOf="@+id/rowTitle" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp" android:layout_marginTop="4dp"/>

            <TextView
                    android:id="@+id/rowLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" - "
                    app:layout_constraintTop_toBottomOf="@+id/rowTitle"
                    app:layout_constraintStart_toEndOf="@+id/rowStartingDate" android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"/>

            <TextView
                    android:id="@+id/rowEndingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Present"
                    app:layout_constraintTop_toBottomOf="@+id/rowTitle"
                    app:layout_constraintStart_toEndOf="@+id/rowLine" android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>