<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".fragments.ProfileFragment">

    <androidx.core.widget.NestedScrollView

            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:id="@+id/profileLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="#f2f2f2">

            <View
                    android:background="#47becd"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"/>

            <LinearLayout
                    android:id="@+id/lineartop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp">

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/photoIV"
                            android:layout_marginTop="35dp"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/pic"
                            android:layout_centerHorizontal="true"
                            android:elevation="10dp"/>

                    <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="85dp"
                                app:contentPaddingLeft="10dp"
                                app:contentPaddingRight="10dp"
                                app:contentPaddingTop="15dp"
                                app:contentPaddingBottom="15dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginBottom="10dp">

                            <ImageView
                                    android:id="@+id/basicInfoEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/penresized1"
                                    android:layout_gravity="top|end"
                                    android:scaleType="fitCenter"
                                    android:adjustViewBounds="true"
                                    android:maxWidth="20dp"
                                    android:maxHeight="20dp"
                            />

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                <RelativeLayout
                                        android:id="@+id/relativeBasicInfo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                    <TextView
                                            android:id="@+id/profileName"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="20dp"
                                            android:textColor="#545454"
                                            android:layout_marginTop="40dp"
                                            android:paddingBottom="5dp"
                                            android:textStyle="bold"
                                            android:gravity="center"/>
                                    <TextView
                                            android:id="@+id/profileProfession"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="17dp"
                                            android:textColor="#545454"
                                            android:paddingBottom="5dp"
                                            android:textStyle="normal"
                                            android:gravity="center"
                                            android:layout_below="@id/profileName"/>

                                    <TextView
                                            android:id="@+id/profileLocation"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:textSize="17dp"
                                            android:textColor="#545454"
                                            android:layout_gravity="center_horizontal"
                                            android:paddingBottom="5dp"
                                            android:textStyle="normal"
                                            android:gravity="center"
                                            android:layout_below="@id/profileProfession">

                                    </TextView>

                                </RelativeLayout>


                                <View
                                        android:id="@+id/horizontalLineInfo"
                                        android:layout_width="fill_parent"
                                        android:layout_height="2dp"
                                        android:background="#c0c0c0"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_below="@id/relativeBasicInfo"/>

                                <RelativeLayout
                                        android:id="@+id/interestsContainer"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/horizontalLineInfo">


                                    <org.apmem.tools.layouts.FlowLayout
                                            android:id="@+id/flowInterests"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="0dp"
                                            android:gravity="center_horizontal">

                                    </org.apmem.tools.layouts.FlowLayout>

                                </RelativeLayout>

                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                    android:id="@+id/relativegoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/lineartop">


                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        card_view:cardBackgroundColor="#fff"
                        card_view:cardElevation="6dp">

                    <ImageView
                            android:id="@+id/editGoals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/penresized1"
                            android:layout_gravity="top|end"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                    />

                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/textAbout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Goals"
                                android:textSize="20dp"
                                android:textColor="#c1c0bf"
                                android:layout_gravity="center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"/>


                        <org.apmem.tools.layouts.FlowLayout

                                android:id="@+id/flowGoals"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:gravity="center_horizontal"
                                android:layout_below="@id/textAbout"
                                android:paddingTop="10dp"
                                android:paddingBottom="20dp"
                                android:paddingHorizontal="20dp">


                        </org.apmem.tools.layouts.FlowLayout>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/relativeexp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/relativegoals">


                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        card_view:cardBackgroundColor="#fff"
                        card_view:cardElevation="6dp">

                    <RelativeLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp">

                        <ImageView
                                android:id="@+id/editExp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/penresized1"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="10dp"
                                android:scaleType="fitCenter"
                                android:adjustViewBounds="true"
                                android:maxWidth="20dp"
                                android:maxHeight="20dp"
                        />

                        <TextView
                                android:id="@+id/textExp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Experience"
                                android:textSize="20dp"
                                android:textColor="#c1c0bf"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"/>

                        <LinearLayout
                                android:id="@+id/expContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/textExp"
                                android:orientation="vertical"
                                android:padding="20dp">

                        </LinearLayout>

                        <!--<ListView
                                android:id="@+id/profileCurrentListView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/editExp"
                                android:layout_marginBottom="10dp">

                        </ListView>-->

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/relativeabout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/relativeexp">

                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        card_view:cardBackgroundColor="#fff"
                        card_view:cardElevation="6dp">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/penresized1"
                            android:layout_gravity="top|end"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:maxWidth="20dp"
                            android:maxHeight="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"

                    />

                    <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:id="@+id/aboutText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="About"
                                android:textSize="20dp"
                                android:textColor="#c1c0bf"
                                android:layout_gravity="center_horizontal"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"/>


                        <TextView
                                android:id="@+id/aboutProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:layout_below="@id/aboutText"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginBottom="30dp"
                                android:textStyle="italic"
                                android:layout_centerHorizontal="true"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <LinearLayout
                    android:id="@+id/linearsocial"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/relativeabout">

                <androidx.cardview.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        card_view:cardBackgroundColor="#fff"
                        card_view:cardElevation="6dp">

                    <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="match_parent"
                            android:weightSum="3"
                            android:layout_gravity="center_horizontal">

                        <ImageView
                                android:id="@+id/instagramicon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/instacircle"
                                android:layout_weight="1"/>
                        <ImageView
                                android:id="@+id/linkedinicon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/linkedincircle"
                                android:layout_weight="1"/>
                        <ImageView
                                android:id="@+id/wwwicon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/wwwcircle"
                                android:layout_weight="1"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linearsocial"
                    android:orientation="vertical">

                <Button
                        android:id="@+id/signoutButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log out"
                        android:textColor="#47becd"
                        android:layout_gravity="center_horizontal"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_marginTop="10dp"

                />
            </LinearLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
            android:id="@+id/progressLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center_vertical"
    >

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>